<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/legend_Soils"
    android:background="#ffffffff">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/dismiss_button"
        android:layout_alignWithParentIfMissing="false"
        android:id="@+id/legend_soilsScroll"
        android:layout_gravity="top">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shrinkColumns="1"
        android:id="@+id/tableLayout">
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
        android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView1"
                android:layout_column="0"
                android:background="#ff28a81f"
                android:text="ok"
                android:textColor="#ff28a81f"
                android:autoText="false"
                android:layout_gravity="center"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Class I: Soil has little to no limitations that restrict its use."
                android:id="@+id/textView2"
                android:layout_column="1"
                android:textSize="16dp"

                android:background="#ffffffff" />

        </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        android:layout_marginBottom="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:background="#ff43ff69"
                android:text="ok"
                android:textColor="#ff43ff69"
                android:autoText="false"
                android:layout_gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Class II: Soil requires moderate conservation practices."
                android:id="@+id/textView4"
                android:layout_column="1"
                android:textSize="16dp"
                android:background="#ffffffff" />
        </TableRow>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
        android:layout_marginBottom="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView5"
                android:layout_column="0"
                android:background="#ffb4c7a5"
                android:text="ok"
                android:textColor="#ffb4c7a5"
                android:autoText="false"
                android:layout_gravity="center"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Class III: Soil requires significant management intervention."
                android:id="@+id/textView6"
                android:layout_column="1"
                android:textSize="16dp"
                android:background="#ffffffff" />

        </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView7"
            android:layout_column="0"
            android:background="#eedc5dff"
            android:text="ok"
            android:textColor="#eedc5dff"
            android:autoText="false"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Class IV: Soil has very severe limitations and requires very careful management."
            android:id="@+id/textView8"
            android:layout_column="1"
            android:textSize="16dp"
            android:background="#ffffffff" />

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView9"
            android:layout_column="0"
            android:background="#ff8f72ff"
            android:text="ok"
            android:textColor="#ff8f72ff"
            android:autoText="false"
            android:layout_gravity="center"
            android:textSize="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Class V: Soil is subject to little or no erosion but has other limitations which may make it unsuitable for crop cultivation."
            android:id="@+id/textView10"
            android:layout_column="1"
            android:textSize="16dp"
            android:background="#ffffffff" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView11"
            android:layout_column="0"
            android:background="#ffd2f070"
            android:text="ok"
            android:textColor="#ffd2f070"
            android:autoText="false"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Class VI: Soil has severe limitations that make it unsuitable for cultivation but may be used for pasture, rangeland etc."
            android:id="@+id/textView12"
            android:layout_column="1"
            android:textSize="16dp"
            android:background="#ffffffff" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView13"
            android:layout_column="0"
            android:background="#fff4b988"
            android:text="ok"
            android:textColor="#fff4b988"
            android:autoText="false"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Class VII: Soil has very severe limitations that make it unsuitable for cultivation but may be used for pasture, rangeland etc."
            android:id="@+id/textView14"
            android:layout_column="1"
            android:textSize="16dp"
            android:background="#ffffffff" />

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView15"
            android:layout_column="0"
            android:background="#fffa101c"
            android:text="ok"
            android:textColor="#fffa101c"
            android:autoText="false"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Class VIII: Soil has very severe  limitations that preclude crop production and restricts it's use to recreational purposes, pasture, rangeland etc."
            android:id="@+id/textView16"
            android:layout_column="1"
            android:textSize="16dp"
            android:background="#ffffffff" />

    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></TableRow>

    </TableLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dismiss"
        android:id="@+id/dismiss_button"
        android:layout_below="@+id/legend_soilsScroll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</LinearLayout>
